[[ -n "$LIBMAKEPKG_TIDY_SPLIT_STATICLIBS_SH" ]] && return
LIBMAKEPKG_TIDY_SPLIT_STATICLIBS_SH=1

LIBRARY=${LIBRARY:-'@libmakepkgdir@'}

source "$LIBRARY/util/message.sh"
source "$LIBRARY/util/option.sh"


packaging_options+=('split-staticlibs')
tidy_move+=('tidy_split_staticlibs')

is_ar_archive() {
	# Detect if a file is an 'ar archive' using bash built-ins only
	local magic f

	for f in $@; do
		[[ ! -f "$f"  ]] && return 1

		read -n7 < "$f"  magic

		if [[ "$magic" != '!<arch>' ]]; then
			return 1
		fi
	done

	return 0
}


tidy_split_staticlibs() {
	if check_option "split-staticlibs" "n"; then
		return
	fi

	local staticlibs_pkgdir staticlibs_debug_pkgdir
	local st st_dir split_st_dir
	local st_debug st_debug_dir split_st_debug_dir

	msg2 "$(gettext "Moving static libraries in default paths to a separate package...")"

	staticlibs_pkgdir="${pkgdir}-@SPLIT_STATIC_SUFFIX@"
	mkdir -p "$staticlibs_pkgdir"

	# Move all static lib files (including symlinks)
	find "$pkgdir" ! -type d -name '*.a' 2>/dev/null | while read st ; do
		if is_ar_archive "$st"; then
			st_dir="${st%/*}"
			split_st_dir="${st_dir/$pkgdir/$staticlibs_pkgdir}"
			mkdir -p "$split_st_dir"
			mv "$st" "$split_st_dir"
		fi
	done
}
